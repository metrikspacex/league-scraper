{
  "name": "@league-scraper/backend",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/metrikspacex/league-scraper",
  "bugs": "https://github.com/metrikspacex/league-scraper/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metrikspacex/league-scraper.git",
    "directory": "packages/backend"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "db": "docker compose -f ../../compose.yml up database -d",
    "dev": "pnpm db && tsx --no-warnings --tsconfig=./src/tsconfig.json --watch ./src/server.ts",
    "eslint": "eslint . --cache --max-warnings 0",
    "lint": "pnpm run eslint && pnpm run prettier",
    "prettier": "prettier . --check --config ../../prettier.config.js",
    "preview": "node ../../dist/backend/server.cjs",
    "test": "cross-env NODE_OPTIONS='--no-deprecation' vitest",
    "update": "pnpm update --latest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "5.0.0-beta.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "got": "^13.0.0",
    "hbs": "^4.2.0",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "vitest": "^0.34.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/got": "^9.6.12",
    "@types/hbs": "^4.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^0.34.6",
    "cross-env": "^7.0.3",
    "esm": "^3.2.25",
    "mocha": "^10.2.0",
    "nock": "^13.3.8",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "tsx": "^4.4.0",
    "typescript": "^5.3.2",
    "vite": "^4.4.5"
  }
}
